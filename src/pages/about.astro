---
const pageTitle = "About Me";
const identity = {
  firstName: "Rick",
  country: "United Snakes of America",
  occupation: "Entrepreneur",
  hobbies: ["A/V production", 
            "web and software development", 
            "osint and security", 
            "restoring old homes" ,
            "carpentry", 
            "plumbing", 
            "masonry", 
            "visual art (digital and otherwise)", 
            "culinary arts", 
            "political science (libertarian-socialist - red/black anarchist)", 
            "dumpster diving", 
            "tinkering with electronics", 
            "meditation", "astrology", 
            "theoretical physics", 
            "snowboarding", 
            "mountain biking", 
            "camping"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs", "PHP"];
const happy = true;
const finished = false;
const goal = 3;
const operatingSystem = "Manjaro Linux";
const quantity = 3;
const footwear = "shoes";
const student = false;
const yeargraduated = 2004;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/blog/">Blog</a>
        <h1>{pageTitle}</h1>
        <h2>... and my new Astro site!</h2>
      <p>Here are a few facts about me:</p>
        <ul>
        <li>My name is {identity.firstName}.</li>
        <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
        {identity.hobbies.length >= 2 &&
            <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
        } 
        </ul>
        <p>my complete list of hobbies is:</p>
        <ul>
            {identity.hobbies.map((hobby) => <li>{hobby}</li>)}
        </ul>
        <p>my list of skills are:</p>
        <ul>
            {skills.map((skill) => <li>{skill}</li>)}
        </ul>

        {happy && <p>I am happy to be learning Astro!</p>}

        {finished && <p>I finished this tutorial!</p>}

        {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>} 

        <p>I use {operatingSystem}</p>

        {student ? <p>I am still in school.</p> : <p>I am no longer in school</p>}

        <p>I have {quantity + 8} pairs of {footwear}</p>
        
        {operatingSystem === "MacOS" ? <p>I am using a Mac.</p> : <p>I am not using a Mac.</p>}
        
        {(yeargraduated < 2017) ? <p> I graduated more than 7 years ago </p> : <p>I graduated in {yeargraduated}</p>  }
      </body>
</html>
